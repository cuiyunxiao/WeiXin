.editCon {

  margin: 20rpx 0;
  padding-left: 30rpx;
}

.editCon_row {
  position: relative;
  padding: 30rpx 0;
  border-bottom: 3rpx solid #d2d2d3;
  height:50rpx;
  line-height: 50rpx
  
}
radio{ transform:scale(0.8)  }
.editCon_row .text {
  float: left;
  width: 180rpx;
  font-size: 32rpx;
  margin-top: 10rpx;
}

.editCon_row .text1 {
  display: block;
  font-size: 32rpx;
}

.editCon_row>input {
  font-size: 32rpx;
}

.editCon_row textarea {
  display: block;
  width: 100%;
  height: 100rpx;
  padding-left: 180rpx;
  font-size: 32rpx;
  padding-top: 10rpx;
}

.arrows {
  position: absolute;
  right: 50rpx;
  top: 50%;
  width: 28rpx;
  height: 28rpx;
  border-width: 1rpx;
  border-color: #999 #999 transparent transparent;
  border-style: solid;
  -webkit-transform: rotate(45deg) translateY(-50%);
  transform: rotate(45deg) translateY(-50%);
}

.editBtn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #ff9800;
  border-radius: 8rpx;
  margin: 60rpx auto;
  color: white
}

.editBtn:active {
  background-color: #e3c343;
}

/*城市选择器*/

.container {
  display: block;
  padding:0 0;
}

.citypickers {
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: red;
}

.citypicker {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0px;
  background-color: rgba(0, 0, 0, 0.5);
}

.citybody {
  position: fixed;
  bottom: 0px;
  background-color: #fff;
}

.cityheader {
  position: absolute;
  top: 0px;
  width: 100%;
  z-index: 4;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #2fb42e;
}

.section .picker {
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
}

.input {
}

.input input {
  font-size: 32rpx;
}

.section {
  padding-top: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
